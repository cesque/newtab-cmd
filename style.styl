bgcolor = #1e1e1e
fgcolor = white
fonts = Monaco, Consolas, "Lucida Console", monospace

body
  background bgcolor
  font-family fonts

  
#container
  margin 100px

.line
  p
    margin 0
    margin-right 10px
    float left
  input
    border none
    background bgcolor
    width 80%
    color transparent
    text-shadow 0 0 0 fgcolor
    font-size large
    float left
    margin 0
    padding 0
    font-family fonts
    &:focus
      outline none
  width 100%
  color white
  font-size large
  vertical-align middle
  height 25px
  .response
    margin 0
    color #ccc
    font-size large
    font-family fonts
    width 100%
	
a
  text-decoration none
  &:hover
    text-decoration underline